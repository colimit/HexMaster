<div class="preview-area media-body comment-body"><%=text%></div>
<form>
	<textarea type="text" class="form-control edit-input" rows="4" name="comment[body]" ><%=comment.escape("body") %></textarea>
	<input type="hidden" name="comment[id]" 
	value="<%= comment.id %>" id="comment[id]">
	<button class="btn btn-primary btn-xs cancel" type="button">
		Cancel
	</button>
	<input class="btn btn-danger btn-xs" type="submit" name="submit" value="Submit">
</form>
